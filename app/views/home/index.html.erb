<br><br>

<table class="table table-hover table-sm">
	<thead>
		<th>Date</th>
		<th>Original Value [USD]</th>
		<th>Moving Average [USD]</th>
	</thead>

	<tbody>
		<% @timeseries_record.each do |record| %>
		<tr>
			<th><%= record['date'] %></th>
			<td><%= record['value'] %></td>
			<td><%= record['moving_ave'] %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<a name="stats" class="anchor"></a>
<h3>Descriptive Statistics</h3>

<table class="table table-hover table-sm">
	<thead>
		<th>Statistic</th>
		<th>Original Data</th>
		<th>Differential</th>
	</thead>

	<tbody>
		<tr>
			<th>Num of Records</th>
			<td><%= @desc_data['number'] %></td>
			<td><%= @desc_diff['number'] %></td>
		</tr>
		<tr>
			<th>Mean</th>
			<td><%= @desc_data['mean'] %></td>
			<td><%= @desc_diff['mean'] %></td>
		</tr>
		<tr>
			<th>Standard Deviation</th>
			<td><%= @desc_data['std'] %></td>
			<td><%= @desc_diff['std'] %></td>
		</tr>
		<tr>
			<th>Min</th>
			<td><%= @desc_data['min'] %></td>
			<td><%= @desc_diff['min'] %></td>
		</tr>
    <tr>
      <th>Max</th>
      <td><%= @desc_data['max'] %></td>
      <td><%= @desc_diff['max'] %></td>
    </tr>
    <tr>
      <th>Range</th>
      <td><%= @desc_data['range'] %></td>
      <td><%= @desc_diff['range'] %></td>
    </tr>
	</tbody>
</table>

